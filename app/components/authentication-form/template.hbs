<div class="card">
  <div class="card-body">
    {{#bs-form
      model=this.changeset
      onSubmit=(action (perform this.authenticateTask) preventDefault=true)
      data-test-form="authentication"
    as |form|}}
      {{form.element
        controlType="text"
        label="Username"
        property="username"
        data-test-input="username"
      }}
      
      {{form.element
        controlType="password"
        label="Password"
        property="password"
        data-test-input="password"
      }}

      <div class="row align-items-center">
        <div class="col-auto">
          {{#bs-button
            type="primary"
            buttonType="submit"
            disabled=this.loginDisabled
            data-test-button="submit"
          }}
            Log in
          {{/bs-button}}
        </div>

        <div class="col">
          {{#if this.errorMessage}}
            <p class="text-danger m-0" data-test-text="error-message">
              {{this.errorMessage}}
            </p>
          {{/if}}
        </div>
      </div>
    {{/bs-form}}
    
  </div>
</div>